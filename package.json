{
	"name": "fiori-xml-lint",
	"displayName": "Fiori XML Lint",
	"description": "Fiori XML Linter for VSCode",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/leo-ls/fiori-xml-lint"
	},
	"bugs": {
		"url": "https://github.com/leo-ls/fiori-xml-lint/issues"
	},
	"homepage": "https://github.com/leo-ls/fiori-xml-lint",
	"license": "SEE LICENSE IN LICENSE.txt",
	"publisher": "leo-ls",
	"version": "0.0.25",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"workspaceContains:**/{ui5,mta}.{yml,yaml}"
	],
	"main": "./dist/extension",
	"contributes": {
		"configuration": {
			"properties": {
				"xml.fiori.linter.run": {
					"type": "string",
					"enum": [
						"onSave",
						"onType",
						"off"
					],
					"default": "onType",
					"description": "Whether the linter is run on save, on type or disabled."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"package": "vsce package --yarn",
		"deploy": "vsce publish --yarn",
		"webpack-dev": "webpack --mode development",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.33.0",
		"@typescript-eslint/parser": "^2.33.0",
		"eslint": "^6.8.0",
		"ts-loader": "^7.0.4",
		"typescript": "^3.8.3",
		"vsce": "^1.88.0",
		"webpack": "^5.10.3",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"@sap/di.code-validation.core": "1.0.12",
		"@sap/di.code-validation.xml": "^1.1.18",
		"amdefine": "1.0.0",
		"fontoxpath": "2.7.9",
		"sax": "1.2.4",
		"xmldom": "^0.6.0"
	}
}
